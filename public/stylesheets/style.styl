
// reset stuff
@import reset

// the main css...
html,body
  height: 100%

body
  font-family: helvetica, arial, sans-serif

a
  color: #00B7FF
  cursor: pointer


.width-wrapper
  max-width: 700px
  width: 100%
  margin: 0 auto
  

// Content pages -- hidden by default
.content-page
  display: none
  &.visible
    display: block

.intro
  h2
    font-size: 30px
    font-weight: bold
    margin: 30px 0 30px 0
    text-align: center

#thetimer
  text-align: center
  .clock
    font-size: 120px
  .hint
    margin-top: 20px
    color: #aaa
    

#topnav
  height: 50px
  background: #DDD
  ul li
    float: left
    width: auto
    font-weight: bold
    margin-right: 1px
    a
      display: block
      line-height: 50px
      padding: 0 16px
      color: #303030
      text-shadow: 0px 1px 0px rgba(255,255,255,0.4)
      text-decoration: none
    &.selected a, a:hover, a:focus
      background: #CCC

