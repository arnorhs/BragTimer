
// reset stuff
@import reset

// the main css...
html,body
  height: 100%

body
  font-family: helvetica, arial, sans-serif

a
  color: #00B7FF
  cursor: pointer


.width-wrapper
  max-width: 700px
  width: 100%
  margin: 0 auto
  

// Content pages -- hidden by default
.content-page
  display: none
  padding: 0
  min-height: 100%
  .width-wrapper
    padding: 50px 0 0 0
  &.visible
    display: block

#contentpage-timer
  background: #CCDDEE
#contentpage-stats
  background: #CCDDEE
  background: #EEDDCC
  //background: #ED0000
  //background: #AEC7BE
  //background: #C9FFFF
  //background: #383556
  //background: #94CE31

.intro
  h2
    font-size: 40px
    font-weight: bold
    margin: 30px 0 30px 0
    text-align: center
    text-shadow: 0px 1px 2px rgba(255,255,255,0.5)
    span.brag
      color: #DD4422
    span.timer
      color: #2244DD

#thetimer
  text-align: center
  .clock
    font-size: 120px
  .hint
    margin-top: 20px
    color: rgba(0,0,0,0.3)
    

#topnav
  height: 50px
  background: rgba(0,0,0,0.2)
  position: fixed
  width: 100%
  ul li
    float: left
    width: auto
    font-weight: bold
    a
      display: block
      line-height: 50px
      padding: 0 16px
      color: rgba(0,0,0,0.7)
      text-shadow: 0px 1px 0px rgba(255,255,255,0.3)
      text-decoration: none
    a:hover, a:focus
      background: rgba(0,0,0,0.05)
    &.selected a
      background: rgba(0,0,0,0.1)

